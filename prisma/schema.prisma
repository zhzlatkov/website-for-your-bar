// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int         @id @default(autoincrement())
  email    String?      @unique
  password String?
  token    AuthToken[]
}

model AuthToken {
  id     Int    @id @default(autoincrement())
  token  String?
  date BigInt?
  user   User?   @relation(fields: [userId], references: [id])
  userId Int
}

model LoginAttempt {
  id        Int     @id @default(autoincrement())
  ip        String?
  createdAt Int
}

model Products {
  id               Int        @id @default(autoincrement())
  name             String?     @unique
  price            Int?
  quantity         Int?
  quantityType     String?
  shortDescription String
  longDescription  String?
  category         Categories @relation(fields: [categoryId], references: [id])
  categoryId       Int
  status           Boolean?    @default(false)
  photoPath        String
}

model Categories {
  id               Int        @id @default(autoincrement())
  name             String?     @unique
  icon             String
  shortDescription String
  status           Boolean?    @default(false)
  products         Products[]
}